{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "object-literal-sort-keys": [
      false
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "max-classes-per-file": false,
    "max-line-length": false,
    "no-unused-expression": [
      true,
      "allow-tagged-template"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "no-console": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "cypress/**/*"
    ]
  }
}